<%= form_for(@task) do |f| %>
  <div class="form-title form">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-details form">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <br>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
